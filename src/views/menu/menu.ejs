<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu - Lusail Royal</title>

    <!--========== BOX ICONS ==========-->
    <link href='https://cdn.jsdelivr.net/npm/boxicons@2.0.5/css/boxicons.min.css' rel='stylesheet'>
    <!--icons styles-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!--========== CSS ==========-->
    <!-- <link rel="stylesheet" href="styles/index.css"> mirar si toca llamar esta linea de codigo -->
    <link rel="stylesheet" href="styles/menu/menu.css">
    <link rel="stylesheet" href="styles/index.css">
</head>

<body>
    <a href="#" class="scrolltop" id="scroll-top">
        <i class='bx bx-chevron-up scrolltop__icon'></i>
    </a>

    <!--========== llamar al HEADER ==========-->
    <%- include('../partials/header') %>


        <!--========== MAIN ==========-->
        <main class="l-main">
            <section class="full-menu" id="menu">
                <div class="wrapper">
                    <h1>Nuestro Menu</h1>
                    <!-- filtrar elementos -->
                    <nav>
                        <div class="items">

                            <span class="item active" data-name="all">Todos</span>
                            <span class="item" data-name="1">Platos</span>
                            <span class="item" data-name="4">Bebidas</span>
                            <span class="item" data-name="2">cocteleria</span>
                            <span class="item" data-name="3">postres</span>
                        </div>
                    </nav>
                    <!-- filter Images -->
                    <div class="gallery">
                        <div class="menu">
                            <div class="menu-box">
                                <% productos.forEach(producto=> { %>
                                    <div class="image" data-name="<%= producto.id_categoria_menu %>">
                                        <div class="menu-card" data-name="<%= producto.categoria %>">
                                            <img src="<%= producto.imagen_menu %>" alt="">
                                            <h3 class="menu__name">
                                                <%= producto.nombre_plato %>
                                            </h3>
                                            <span class="menu__detail">
                                                <%= producto.descripcion %>
                                            </span>
                                            <span class="menu__preci">$<%= producto.precio.toLocaleString('es-CO') %>
                                            </span>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
                        </div>
                    </div>

                </div>
            </section>
            <!-- cuadro de vista previa de imagen en pantalla completa -->
        </main>

        <!--========== llamar footer ==========-->

        <script src="js/menu.js"></script>
        <!-- Script -->
        <script src="js/index.js"></script>
</body>

</html>